{
  "compilerOptions": {
    // Target ES2020 for better compatibility with Vercel's Node.js runtime
    "target": "ES2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    // Strict type checking for production-ready code
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    // Use "bundler" for Next.js 13+ (required for App Router)
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    // React JSX transform (no need to import React)
    "jsx": "react-jsx",
    "incremental": true,
    // Next.js TypeScript plugin
    "plugins": [
      {
        "name": "next"
      }
    ],
    // Path aliases for cleaner imports
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    // Additional strict checks for better code quality
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
